{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2022",
		"module": "esnext",
		"lib": ["es2022", "dom"],
		"typeRoots": ["node_modules/@types", "node_modules/@overwolf/types"],
		"types": ["@overwolf/types", "node"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@main-app/common/assets": ["libs/common/assets/src/index.ts"],
			"@main-app/companion/background": ["libs/companion/background/src/index.ts"],
			"@main-app/companion/common": ["libs/companion/common/src/index.ts"],
			"@main-app/companion/orchestrator": ["libs/companion/orchestrator/src/index.ts"],
			"@main-app/companion/windows/common": ["libs/companion/windows/common/src/index.ts"],
			"@main-app/companion/windows/main": ["libs/companion/windows/main/src/index.ts"],
			"@main-app/companion/windows/overlay": ["libs/companion/windows/overlay/src/index.ts"],
			"stream": ["./node_modules/stream-browserify"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
